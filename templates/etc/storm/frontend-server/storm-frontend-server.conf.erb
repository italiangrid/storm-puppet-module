# StoRM frontend configuration file
#
# WARNING: This file is auto-generated by puppet!
# WARNING: To change it, edit the file in [templates/etc/storm/frontend-server/storm-frontend-server.conf.erb]
#

# Service settings
fe.port=<%=scope.lookupvar('storm::frontend::port')%>
fe.threadpool.threads.number=<%=scope.lookupvar('storm::frontend::threadpool_threads_number')%>
fe.threadpool.maxpending=<%=scope.lookupvar('storm::frontend::threadpool_maxpending')%>
fe.gsoap.maxpending=<%=scope.lookupvar('storm::frontend::gsoap_maxpending')%>

# Log settings
log.filename = /var/log/storm/storm-frontend-server.log
# Allowed values: ERROR, WARN, INFO, DEBUG, DEBUG2.
log.debuglevel=<%=scope.lookupvar('storm::frontend::log_debuglevel')%>

# Security settings
security.enable.mapping=false
security.enable.vomscheck=<%=scope.lookupvar('storm::frontend::security_enable_vomscheck')%>

# Backend information
be.xmlrpc.host=<%=scope.lookupvar('storm::frontend::be_xmlrpc_host')%>
be.xmlrpc.token=<%=scope.lookupvar('storm::frontend::be_xmlrpc_token')%>
be.xmlrpc.port=<%=scope.lookupvar('storm::frontend::be_xmlrpc_port')%>
be.xmlrpc.path=<%=scope.lookupvar('storm::frontend::be_xmlrpc_path')%>

# default is 9998
be.recalltable.port=<%=scope.lookupvar('storm::frontend::be_recalltable_port')%>

# Database
db.host=<%=scope.lookupvar('storm::frontend::db_host')%>
db.user=<%=scope.lookupvar('storm::frontend::db_user')%>
db.passwd=<%=scope.lookupvar('storm::frontend::db_passwd')%>

# Argus Blacklisting
check.user.blacklisting=<%=scope.lookupvar('storm::frontend::check_user_blacklisting')%>
<% if scope.lookupvar('storm::frontend::check_user_blacklisting') %>
argus-pepd-endpoint=<%=scope.lookupvar('storm::frontend::argus_pepd_endpoint')%>
argus.resource-id=<%=scope.lookupvar('storm::frontend::argus_resource_id')%>
<% else %>
#argus-pepd-endpoint=
#argus.resource-id=
<% end %>

# Monitoring
monitoring.enabled=<%=scope.lookupvar('storm::frontend::monitoring_enabled')%>
<% if scope.lookupvar('storm::frontend::monitoring_enabled') %>
monitoring.timeInterval=<%=scope.lookupvar('storm::frontend::monitoring_time_interval')%>
monitoring.detailed=<%=scope.lookupvar('storm::frontend::monitoring_detailed')%>
<% else %>
#monitoring.timeInterval=60
#monitoring.detailed=false
<% end %>

# WSDL to be returned to a GET request
wsdl.file = /usr/share/wsdl/srm.v2.2.wsdl